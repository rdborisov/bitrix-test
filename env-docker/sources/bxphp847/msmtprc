# smtp account configuration for default
account default
logfile /proc/self/fd/2
host localhost
port 25
from xxx@yyy.zzz
user xxx@yyy.zzz
password xxxyyyzzz
auth login
aliases /etc/aliases
keepbcc off
tls on
tls_starttls on
tls_certcheck on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
protocol smtp
